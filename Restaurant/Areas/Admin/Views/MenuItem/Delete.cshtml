@model Restaurant.Models.ViewModels.MenuItemViewModel
@using Restaurant.Extensions
@{
    ViewData["Title"] = "Details Deletion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">Menu Item Details</h2>
<br />

<form method="post">
    <div class="border backgroundWhite row">
        <input type="hidden" asp-for="MenuItem.Id" />

        <div class="col-8">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="MenuItem.Name" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="MenuItem.Name" readonly class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="MenuItem.Description" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    <div class="border" style="width:100%; padding: 5px; padding-left: 15px; border-radius: 5px; background-color: #F0F0F0;">
                        @Model.MenuItem.Description
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="MenuItem.Price" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="MenuItem.Price" readonly class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="MenuItem.CategoryId" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    <div class="border" style="width:100%; padding: 5px; padding-left: 15px; border-radius: 5px; background-color: #f0f0f0;">
                        @Model.MenuItem.Category.Name
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="MenuItem.SubCategoryId" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    <div class="border" style="width:100%; padding: 5px; padding-left: 15px; border-radius: 5px; background-color: #f0f0f0;">
                        @Model.MenuItem.SubCategory.Name
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="MenuItem.Spicyness" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    <div class="border" style="width:100%; padding: 5px; padding-left: 15px; border-radius: 5px; background-color: #f0f0f0;">
                        @Model.MenuItem.Spicyness
                    </div>
                </div>
            </div>
        </div>
        <div class="col-3 offset-1">
            <img src="@Model.MenuItem.Image" width="100%" />
        </div>

        <div class="col-8">
            <div class="col-8 offset-4">
                <partial name="_DeleteButtonPartial" model="Model.MenuItem.Id" />
            </div>
        </div>
    </div>
</form>